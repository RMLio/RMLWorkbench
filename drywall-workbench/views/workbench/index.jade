mixin licensesId(Id)
  div.form-group
    label(for=Id) License
    select.selectpicker.form-control(id=Id data-live-search='true' title="Choose a license.")
      each cat in licenses
        optgroup(label=cat[0].category)
          each l in cat
              option= l.name + ' (' + l.abbreviation + ')'

